<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/vupper_wave"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bottom_wave"
        android:rotationX="180"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vbottom_wave"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bottom_wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/cardview_light_background"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="Ganpat University"
                android:textSize="20sp"
                android:textStyle="bold" />


            <View
                android:id="@+id/v_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black"
                android:layout_below="@+id/tv_note_title"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:id="@+id/tv_note_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_divider"
                android:layout_alignStart="@+id/tv_note_title"
                android:layout_alignLeft="@+id/tv_note_title"
                android:layout_alignEnd="@+id/tv_note_title"
                android:layout_alignRight="@+id/tv_note_title"
                android:text="Ganpat University"
                android:textStyle="bold"
                 />

            <TextView
                android:id="@+id/tv_note_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_note_subtitle"
                android:layout_alignStart="@+id/tv_note_subtitle"
                android:layout_alignLeft="@+id/tv_note_subtitle"
                android:layout_alignEnd="@+id/tv_note_subtitle"
                android:layout_alignRight="@+id/tv_note_subtitle"
                android:layout_marginTop="5dp"
                android:text="UVPCE College is under Ganpat University"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/note_modified_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_below="@+id/tv_note_desc"
                android:layout_alignStart="@+id/tv_note_desc"
                android:text="Sep, 25 2020 09:45:23 am"
                android:layout_alignLeft="@+id/tv_note_desc" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>