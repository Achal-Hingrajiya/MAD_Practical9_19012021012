<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="15dp"
    android:backgroundTint="@color/cardview_dark_background"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganpat University"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/tv_note_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganpat University"
            android:textColor="@color/white"
            android:layout_below="@+id/tv_note_title"
            android:layout_alignLeft="@+id/tv_note_title"
            android:layout_alignRight="@+id/tv_note_title"
            android:layout_alignStart="@+id/tv_note_title"
            android:layout_alignEnd="@+id/tv_note_title" />

        <TextView
            android:id="@+id/tv_note_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UVPCE College is under Ganpat University"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_note_subtitle"
            android:layout_alignRight="@+id/tv_note_subtitle"
            android:layout_alignLeft="@+id/tv_note_subtitle"
            android:layout_alignEnd="@+id/tv_note_subtitle"
            android:layout_alignStart="@+id/tv_note_subtitle" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"
            android:layout_below="@+id/tv_note_desc"
            android:layout_alignLeft="@+id/tv_note_desc"
            android:layout_alignStart="@+id/tv_note_desc">
            <TextView
                android:id="@+id/note_modified_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sep, 25 2020 09:45:23 am"
                android:textColor="@color/white"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="end">

                <Button
                    android:id="@+id/btn_edit_note"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/ic_baseline_edit_24"
                    android:backgroundTint="@color/yellow"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>

                <Button
                    android:id="@+id/btn_delete_note"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:background="@drawable/ic_baseline_delete_24"
                    android:backgroundTint="@color/red"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>